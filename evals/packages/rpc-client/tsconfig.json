{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "../../",
		"baseUrl": ".",
		"paths": {
			"@roo-code/*": ["../*/src"]
		}
	},
	"include": ["src/**/*", "../types/src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
