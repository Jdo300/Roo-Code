{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "./src",
		"baseUrl": ".",
		"composite": true,
		"declarationMap": true,
		"sourceMap": true,
		"preserveSymlinks": true
	},
	"references": [{ "path": "../types" }],
	"include": ["src"],
	"exclude": ["node_modules"]
}
